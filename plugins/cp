function show_help() {
    echo 'Usage: sbc cp <source_file[ source_file_2[...]]> <destination>'
    echo 'Source files are the paths (absolute or relative) in SSH server machine'
    echo 'Destination is a valid path on SSH client machine'
}

if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    show_help
    exit
fi

files_to_copy=${@:1:$((${#@} - 1))}
destination=${@:${#@}}

if [ -z "$destination" ] || [ -z "$files_to_copy" ]; then
    echo
    show_help
    exit
fi

files_with_host=$(
    for file in $files_to_copy; do
        [ "${file:0:1}" != "/" ] && file=$SBC_REMOTE_PWD/$file
        echo $SBC_REMOTE_USER@$SBC_REMOTE_HOST:$file
    done)

scp -P $SBC_REMOTE_PORT $files_with_host $destination
